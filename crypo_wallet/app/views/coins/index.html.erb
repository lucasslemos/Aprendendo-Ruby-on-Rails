
<div class="container">
  <div class="row">
    <div class="col-sm-6 mb-3">
      <h1>CRYPTO_WALLET</h1>
    </div>

    <div class="col-sm-6 text-md-right mb-3">
      <%= link_to new_coin_path, class: 'btn btn-primary text-white' do %>
        <strong>New Coin</strong>
      <% end %>
    </div>
  </div>

  <% if notice %>
    <h6 class="alert alert-success"><%= notice %></h6>
  <% end %>

  <% if alert %>
    <h6 class="alert alert-warning"><%= alert %></h6>
  <% end %>

  <hr>

  <%= search_form_for @q do |f| %>
    <div class="form-group row">             
      <div class="col-sm-6">
      
        <label>Description</label>
          <%= f.search_field :description_i_cont, class: 'form-control' %>         
      </div>
    </div>
    
    <div class="row">
      <div class="col-12 mb-3">
        <%= f.submit "Search", class: 'btn btn-primary' %>
        <%= link_to "clear search", coins_path, class: 'btn btn-light text-dark' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover mb-3">
      <thead>
      <tr>
        
        <th class="text-center">
          <%= sort_link(@q, :id) do %>
            ID
          <% end %>
        </th>
        
        <th class="text-center">
          <%= sort_link(@q, :description) do %>
          Description
          <% end %>
        </th>

        <th class="text-center">
          <%= sort_link(@q, :acronym) do %>
          Acronym
          <% end %>
        </th>    

        <th class="text-center">
          <%= sort_link(@q, :url_image) do %>
            Image
          <% end %>
        </th>

        <th class="text-center">
          <%= sort_link(@q, :mining_type) do %>
            Cod._Mi
          <% end %>
        </th>  

        <th class="text-center" colspan="4">Options</th>

      </tr>
      </thead>

      <tbody>
      <% @coins.each do |c| %>
        <tr>
          <td class="text-center"><%= c.id %></td>
          <td class="text-center"><%= c.description %></td>
          <td class="text-center"><%= c.acronym %></td>
          <td class="text-center"><%= image_tag c.url_image, width:25, height:25 %></td>
          <td class="text-center"><%= c.mining_type %></td>
          
          <td class="text-center">
            <%= link_to 'Show', c, class: 'btn btn-info btn-sm text-white' %>
          </td>

          <td class="text-center">
            <%= link_to 'Edit', edit_coin_path(c), class: 'btn btn-primary btn-sm text-white' %>
          </td>

          <td class="text-center">
            <%= link_to 'Delete', c, method: :delete, class: 'btn btn-primary btn-sm text-white', data: { confirm: 'Are you sure?' } %>
          </td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%== @pagy %>
</div>