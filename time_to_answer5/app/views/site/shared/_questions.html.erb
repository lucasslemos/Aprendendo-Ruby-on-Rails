<% @questions.each do |question| %>
<div class="card">
  <div class="card-header">
    <%= question.description %>
  </div>
  <div class="card-body">
    <ul>
        <% question.answers .each do |answer| %>
          <li><%= answer.description %></li>
        <% end %>
    </ul>
    <a href="#!" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<br>
<% end %>

<div class="text-center">
  <%= paginate @questions %>
</div>