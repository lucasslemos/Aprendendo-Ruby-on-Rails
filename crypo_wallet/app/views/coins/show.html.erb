  <div class="container">
    <p id="notice"><%= notice %></p>



    <div class="form-group">
      Coin:
      <input disabled class="form-control" value="<%= @coin.description %>">
    </div>

    <div class="form-group">
      Acronym:
      <input disabled class="form-control" value="<%= @coin.acronym %>">
    </div>

    
    <div class="form-group">
      <strong>Url image:</strong>
      <%= @coin.url_image %>
      <%= image_tag @coin.url_image, width:25, height:25%>
    </div>

    <div class="form-group">
      <strong>Type_Mining:</strong>
     <%= @coin.mining_type %>
    </div>
    
    <div class="form-group">
      <%= link_to 'Edit', edit_coin_path(@coin), class: "btn btn-primary text-white" %> |
      <%= link_to 'Back', coins_path, class: "btn btn-light text-dark" %>
    </div>


  </div>
