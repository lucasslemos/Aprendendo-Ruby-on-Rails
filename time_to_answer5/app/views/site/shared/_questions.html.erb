
<!-- Main component for a primary marketing message or call to action -->
<div class="jumbotron">
  <% unless params[:term] %>
    <h3>Ãšltimas perguntas cadastradas...</h3>
  <% else %>
    <h3><%= "Resultados  para o termo \"#{params[:term]}\"..."%></h3>
  <% end %>
</div>

<% @questions.each do |question| %>
<%= form_with url: site_answer_path do |form| %>
<div class="card">
  <div class="card-header"  id="headingOne">

    <h5 class="mb-0">
      
      <label class="btn btn-sm btn-outline-info py-10" style="margin-right: 10px;">
        <%= link_to question.subject.description, site_search_subject_path(question.subject_id) %>
      </label>
      <%= question.description %>
    </h5>
    
  </div>
  <div class="card-body">
    <ul>
        <% question.answers .each do |answer| %>
            <!-- Default unchecked -->
          <li style="list-style:none;" >
            <div class="radio">  
                <label>
                    <%= radio_button_tag 'answer_id', answer.id %>
                    <%= answer.description %>'
                </label>
            </div>
          </li>
        <% end %>
        <li style="list-style:none;">
          <%= form.submit "Responder", class:"btn btn-secondary", id: "submit_#{question.id}" %>
        </li>
    </ul>
  </div>
</div>
<br>
<% end %>
<% end %>

<div class="text-center">
  <%= paginate @questions %>
</div>

