
<%= simple_form_for(@mining_type) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :acronym %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Save", class: "btn btn-#{@mining_type.new_record? ? "success" : "primary"}" %>
    <%= link_to 'Back', mining_types_path, class: 'btn btn-light text-dark' %>
  </div>
  
<% end %>
