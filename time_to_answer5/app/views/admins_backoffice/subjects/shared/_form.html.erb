<div id="default">
  <div class="card mb-4">
      <div class="card-header"><%= action_message %></div>
      <div class="card-body">
        <% if @subject.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            
            <ul>
              <% @subject.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
        </div>
         <% end %>
         <!-- Component Preview-->
          <div class="sbp-preview">
              <div class="sbp-preview-content">
                <%= form_with(model: [ :admins_backoffice, @subject], local: true) do |form| %>
                      <div class="form-group">
                          <%= form.label :description %>
                          <%= form.text_field :description, class:"form-control", placeholder:"Descrição do Assunto/Área" %>
                      </div>
                      
                  <button type="submit" class="btn btn-primary"> SALVAR </button>
                  <% end %>
                      </div>
              
                  </div>
              </div>
          </div>
      </div>
